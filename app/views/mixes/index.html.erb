<div id="logo">
  <%= image_tag('tape.jpg', :width => '200') %>  
</div>
<% if user_signed_in? %>
  <%= link_to '+ New Mix', new_user_mix_path(current_user), :class => 'small button radius new-mix' %>
<% end %>

<ul class="mix-list small-block-grid-2 large-block-grid-4">
<% @mixes.each do |mix| %>
  <li>
    <article style="background-image: url(<%= mix.art.thumb %>);">
      <a href="<%= mix_path(mix) %>">
        <header>
          <h1><%= mix.title %></h1>
        </header>
      </a>
    </article>
    <% if user_signed_in? && (mix.user == current_user) %>
      <span><%= link_to 'Edit', edit_mix_path(mix) %></span>
      | <span><%= link_to 'Destroy', mix, method: :delete, data: { confirm: 'Are you sure?' } %></span>
    <% end %>
  </li>
<% end %>
</ul>