<div class="grid-x grid-padding-x">
  <div class="cell small-4">
    <%= image_tag "tape.jpg" %>
  </div>
  <div class="cell small-4">
    <% if user_signed_in? %>
      <%= link_to "+ Create a Mix Tape", new_user_mix_path(current_user), class: "button new-mix success" %>
    <% elsif %>
      <p>A new old school way to share music.<br><%= link_to "Log in", new_user_session_path %> or <%= link_to "Sign up", new_user_registration_path %> to get started.</p>
    <% end %>
  </div>
</div>

<div class="grid-x grid-padding-x small-up-3 mix-list">
  <% @mixes.each do |mix| %>
    <div class="cell">
      <article style="background-image: url(<%= mix.art.thumb %>);" class="mix">
        <a href="<%= mix_path(mix) %>">
          <header>
            <h1><%= mix.title %></h1>
          </header>
        </a>
      </article>
    </div>
  <% end %>
</div>
