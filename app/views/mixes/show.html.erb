<% content_for :title, @mix.title + ' â€¢ MinxTape' %>

<% content_for :breadcrumbs do %>
  <li><%= link_to 'All Mixes', mixes_path %></li>
  <li class="unavailable">
    <span class="show-for-sr">Current: </span> <%= @mix.title %>
  </li>
<% end %>

<article style="background-image: url(<%= @mix.art.thumb %>);" class="mix">
  <header>
    <h1><%= @mix.title %></h1>
    <p><%= @mix.description %></p>
  </header>
  <div class="audio-player">
    <audio controls preload="metadata" id="minxtape-player" data-position="1">
      <source src="<%= @tracks.first.audio.url %>" type="audio/mpeg">
        Your browser does not support the audio element.
    </audio>
  </div>
  <ul class="track-list">
    <%= render @tracks %>
  </ul>
  <div class="overlay"></div>
</article>

<div class="row column pad">
  <% if user_signed_in? && (@mix.user == current_user) %>
    <%= link_to 'Edit', edit_mix_path(@mix), class: "button " %>
    <%= link_to 'Destroy', @mix, method: :delete, class: "button alert", data: { confirm: "Are you sure?" } %>
  <% end %>
</div>
