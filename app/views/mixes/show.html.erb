<% content_for :title, @mix.title + ' | MinxTape' %>

<% content_for :breadcrumbs do %>
  <li><%= link_to 'All Mixes', mixes_path %></li>
  <li class="unavailable">
    <span class="show-for-sr">Current: </span> <%= @mix.title %>
  </li>
<% end %>

<div class="row">
  <div class="large-8 columns">
    <article style="background-image: url(<%= @mix.art.thumb %>);">
      <header>
        <h1><%= @mix.title %></h1>
        <p><%= @mix.description %></p>
      </header>
      <ul class="track-list">
        <%= render @tracks %>
      </ul>
    </article>
  </div>
  <div class="large-4 columns">
    <% if user_signed_in? && (@mix.user == current_user) %>
      <%= link_to 'Edit', edit_mix_path(@mix), class: "button " %>
      <%= link_to 'Destroy', @mix, method: :delete, class: "button alert", data: { confirm: "Are you sure?" } %>
    <% end %>
  </div>
</div>
